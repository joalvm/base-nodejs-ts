{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./build",
        "target": "ESNext",
        "lib": ["ES2021"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "strictBindCallApply": false,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "removeComments": true,
        "noFallthroughCasesInSwitch": false,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "paths": {
            "@/": ["src/"]
        }
    },
    "include": ["src/", "test/**/*-spec.ts"],
    "exclude": ["node_modules", "build", "bin", ".eslintrc.cjs", ".prettierrc.cjs"]
}
